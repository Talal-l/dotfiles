# while getchar()
snippet whgetc
while ((${1:c} = getchar()) != EOF ) {
    ${0:${VISUAL}}
}
endsnippet

# while getchar()
snippet whgetcf
while ((${1:c} = getc(${2:f})) != EOF ) {
    ${0:${VISUAL}}
}
endsnippet


# scanf int
snippet scanfd
scanf("%${1:d}",${2:&n});
endsnippet


# typedef struct
snippet ts
typedef struct ${1:Name} {
    ${0:${VISUAL}}
} ${1:Name};

endsnippet

